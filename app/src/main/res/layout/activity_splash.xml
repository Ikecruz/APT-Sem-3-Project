<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Splash">

    <RelativeLayout
        android:id="@+id/parentRelative"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@color/main_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/livvic_bold"
                android:text="My Drink"
                android:textColor="@color/primary_color"
                android:textSize="25sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/livvic"
                android:text="Find amazing soft drink recipes"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="5sp"
                android:textColor="@color/secondary_color"
                android:textSize="18sp" />

            <ImageView
                android:layout_marginTop="40dp"
                android:layout_marginBottom="40dp"
                android:layout_width="235dp"
                android:layout_height="179dp"
                android:layout_gravity="center"
                android:foregroundGravity="center"
                app:srcCompat="@drawable/cocktail_monochromatic" />

            <Button
                android:id="@+id/explorebtn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:backgroundTint="@color/secondary_color"
                android:fontFamily="@font/livvic"
                android:text="Let's Explore" />

        </LinearLayout>

    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>